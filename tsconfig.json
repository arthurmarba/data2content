{
  "compilerOptions": {
    "target": "ES2022", // Atualizado para ES2022
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@models/*": ["./src/app/models/*"],
      "@lib/*": ["./src/app/lib/*"],
      "@auth/*": ["./src/app/api/auth/*"] // Novo alias para auth
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"], // Adicionado para suportar tipos customizados
    "types": ["next", "next-auth"], // Adicionado para suportar Next e NextAuth
    "strictNullChecks": true, // Melhora a segurança de tipos
    "noUncheckedIndexedAccess": true, // Melhora a segurança ao acessar propriedades
    "noImplicitAny": true, // Previne any implícito
    "noImplicitReturns": true, // Garante que todas as funções retornem algo
    "noFallthroughCasesInSwitch": true // Previne fallthrough em switch
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/lib/mercadopago.js",
    "types/**/*.d.ts" // Inclui tipos customizados
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/dist/*",
    "**/.next/*",
    "**/out/*"
  ]
}